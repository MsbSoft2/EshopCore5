@page
@model MyEShop.Pages.Admin.EditModel
@{
    ViewData["Title"] = "ویرایش کالا";
}

<h1>ویرایش کالا</h1>
<hr />
<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Product.Id" />
    <dl class="dl-horizontal">
        <dt>
            <label asp-for="Product.Name"></label>
        </dt>
        <dd>
            <input asp-for="Product.Name" class="form-control"/>
            <span asp-validation-for="Product.Name"></span>
        </dd>
        <dt>
            <label asp-for="Product.Description"></label>
        </dt>
        <dd>
            <textarea asp-for="Product.Description" rows="4" class="form-control"></textarea>
            <span asp-validation-for="Product.Description"></span>
        </dd>
        <dt>
            <label asp-for="Product.Price"></label>
        </dt>
        <dd>
            <input asp-for="Product.Price" class="form-control"/>
            <span asp-validation-for="Product.Price"></span>
        </dd>
        <dt>
            <label asp-for="Product.QuantityInStack"></label>
        </dt>
        <dd>
            <input asp-for="Product.QuantityInStack" class="form-control"/>
            <span asp-validation-for="Product.QuantityInStack"></span>
        </dd>
        <dt>
            <label asp-for="Product.Picture"></label>
        </dt>
        <dd>
            <input asp-for="Product.Picture"/>
            <span asp-validation-for="Product.Picture"></span>
        </dd>
        <dt>
        </dt>
        <dd>
            <input type="submit" value="ثبت" class="btn btn-block rounded-pill btn-success"/>

        </dd>
    </dl>
</form>