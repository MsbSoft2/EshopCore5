@page
@model MyEShop.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin";
}
<style>
    
    table {
        width: 100%
    }

    td, th {
        border: 1px solid #999;
        padding: 0.5rem;
    }

    .myButton {
        box-shadow: 0px 10px 14px -7px #3e7327;
        background: linear-gradient(to bottom, #77b55a 5%, #72b352 100%);
        background-color: #77b55a;
        border-radius: 4px;
        border: 1px solid #4b8f29;
        display: inline-block;
        cursor: pointer;
        color: #ffffff;
        font-family: Arial;
        font-size: 13px;
        font-weight: bold;
        padding: 6px 12px;
        text-decoration: none;
        text-shadow: 0px 1px 0px #5b8a3c;
        margin: 10px;
    }

    .myButton:hover {
        background: linear-gradient(to bottom, #72b352 5%, #77b55a 100%);
        background-color: #72b352;
    }

    .myButton:active {
        position: relative;
        top: 1px;
    }
</style>
<h1>لیست کالا ها</h1>
<hr />
<p>
    <a asp-page="Add" class="myButton">افزودن کالای جدید</a>
</p>

<table class="table table-bordered">
    <thead>
    <tr>
        <td>تصویر</td>
        <td>نام کالا</td>
        <td>قیمت</td>
        <td>دستورات</td>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Products)
    {
        <tr>
            <td>
                <img src="/images/@(item.ItemId).jpg" style="max-width: 200px; border: 1px solid gray; border-radius: 3px;padding: 3px" />
            </td>
            <td>@item.Name</td>
            <td>@item.Item.Price</td>
            <td>
                <a asp-page="Edit" asp-route-id="@item.ProductID">ویرایش</a>
                <a asp-page="Delete" asp-route-id="@item.ProductID">حذف</a>
            </td>
        </tr>
    }
    </tbody>
</table>